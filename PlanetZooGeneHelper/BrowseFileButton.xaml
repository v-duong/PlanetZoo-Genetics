<UserControl x:Class="PlanetZooGeneHelper.BrowseFileButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlanetZooGeneHelper"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox IsReadOnly="True" IsEnabled="false" Text="{Binding Path=FilePath,Mode=TwoWay}"/>
        <Button Grid.Column="1" Click="Button_Click">Browse</Button>
    </Grid>
</UserControl>

